<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:outlineSpotShadowColor="@color/colorPrimaryDark"
    tools:context=".TopScorerFragment">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
            <TextView
                android:id="@+id/tv_pp_fragment_top_scorer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/custom_border"
                android:gravity="center"
                android:text="No:" />

            <TextView
                android:id="@+id/tv_pname_fragment_top_scorer"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="35dp"
                android:background="@drawable/custom_border"
                android:gravity="center"
                android:text="Name" />

            <TextView
                android:id="@+id/tv_tname_fragment_top_scorer"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="35dp"
                android:background="@drawable/custom_border"
                android:gravity="center"
                android:text="Team" />

            <TextView
                android:id="@+id/tv_goals_fragment_top_scorer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/custom_border"
                android:gravity="center"

                android:text="Goal" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar_topscore_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fragment_top_scorer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>